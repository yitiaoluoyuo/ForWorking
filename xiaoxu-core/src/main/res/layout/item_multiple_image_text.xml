<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/item_img_multiple"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:background="@android:color/white" />


    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_index_goods_name"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1.8"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/app_gray_02"
            android:textSize="10dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_$"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:text="￥"
                android:textColor="@color/app_ui"
                android:textSize="10sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_index_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1299"
                android:textColor="@color/app_ui"
                android:textSize="12dp" />

           <!-- <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_index_goods_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_alignBaseline="@+id/tv_$"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"

                android:text="库存：56"
                android:textColor="@color/app_ui"
                android:textSize="12dp"

                />-->
        </LinearLayout>


    </android.support.v7.widget.LinearLayoutCompat>


</LinearLayout>